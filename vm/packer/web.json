{
  "builders": [
    {
      "type": "docker",
      "image": "nginx",
      "export_path": "web.tar"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{pwd}}/web/nginx.conf",
      "destination": "/etc/nginx/conf.d/default.conf"
    },
    {
      "type": "shell",
      "inline": ["echo \"daemon off;\" >> /etc/nginx/nginx.conf"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "gcp_iac_vm_web",
      "tag": "latest"
    }
  ]
}
