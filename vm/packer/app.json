{
  "builders": [
    {
      "type": "docker",
      "image": "debian",
      "export_path": "vm.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y install python-pip python-dev python-flask python-wtforms python-arrow python-flask-sqlalchemy python-pymysql python-flaskext.wtf mysql-client",
        "mkdir /app"
      ]
    },
    {
      "type": "file",
      "source": "{{pwd}}/app/",
      "destination": "/app"
    },
    {
      "type": "shell",
      "inline": ["cd /app"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "gcp_iac_vm_app",
      "tag": "latest"
    }
  ]
}
