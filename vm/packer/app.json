{
  "builders": [
    {
      "type": "docker",
      "image": "debian",
      "export_path": "vm.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y install python python-pip mysql-client"
      ]
    },
    {
      "type": "ansible",
      "user": "root",
      "inventory_directory": "{{pwd}}/../ansible/",
      "playbook_file": "{{pwd}}/../ansible/app.yaml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "kentfujii/gcp_iac_vm_app",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `login_username`}}",
        "login_password": "{{user `login_password`}}"
      }
    ]
  ]
}
