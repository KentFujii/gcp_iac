{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "vm.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y install python python-pip mysql-client"
      ]
    },
    {
      "type": "file",
      "source": "{{pwd}}/../app",
      "destination": "/app"
    },
    {
      "type": "shell",
      "inline": [
        "cd /app",
        "pip install -r requirements.txt"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "kentfujii/gcp_iac_vm_app",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `login_username`}}",
        "login_password": "{{user `login_password`}}"
      }
    ]
  ]
}
